    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="8%"
        android:id="@+id/mapbar"

        android:layout_height="?attr/actionBarSize"
        android:background="#ffffff">

        <ImageView
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="80%"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            android:src="@drawable/logoround"/>

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:textSize="20sp"-->
        <!--android:text="Drive-Thru"/>-->

        <ImageView
            app:layout_aspectRatio="300%"
            app:layout_heightPercent="80%"
            app:layout_marginLeftPercent="5%"
            android:layout_centerInParent="true"
            android:src="@drawable/logo_title" />

        <ImageView
            app:layout_aspectRatio="100%"
            app:layout_heightPercent="80%"
            android:layout_alignParentRight="true"
            android:id="@+id/mimg"
            android:layout_centerVertical="true"
            app:layout_marginRightPercent="5%"/>

    </android.support.percent.PercentRelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        >
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:hint="Registered Email*"
            android:background="@drawable/background_white"
            android:id="@+id/edtTxtMerchantEmail"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edtTxtMerchantEmail"
            android:hint="Registered Password*"
            android:padding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/background_white"
            android:id="@+id/edtTxtMerchantPassword"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edtTxtMerchantPassword"
            android:hint="lat"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/background_white"
            android:id="@+id/edtTxtLat"/>
        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edtTxtLat"
            android:hint="lng*"
            android:padding="5dp"
            android:inputType="text"
            android:background="@drawable/background_white"
            android:id="@+id/edtTxtLng"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignin"
        android:text="Sign in"
        android:background="@drawable/signinbackground"
        android:textColor="@color/colorAccent"

        android:layout_centerInParent="true"
        />

</android.support.percent.PercentRelativeLayout>